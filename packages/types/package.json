{
  "name": "@firsttimers/types",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --out-dir dist",
    "dev": "tsup src/index.ts --watch --format esm --dts --out-dir dist",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@firsttimers/config": "workspace:*",
    "eslint": "^9.39.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.0"
  }
}
