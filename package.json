{
  "name": "firsttimers-monorepo",
  "private": true,
  "packageManager": "bun@1.3.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "prisma:generate": "bunx prisma generate --schema prisma/schema.prisma",
    "prisma:migrate": "bunx prisma migrate dev --schema prisma/schema.prisma",
    "prisma:push": "bunx prisma db push --schema prisma/schema.prisma",
    "prisma:seed": "bunx prisma db seed --schema prisma/schema.prisma",
    "docker:up": "bash docker-scripts.sh up",
    "docker:down": "bash docker-scripts.sh down",
    "docker:build": "bash docker-scripts.sh build",
    "docker:reset": "bash docker-scripts.sh reset",
    "docker:logs": "bash docker-scripts.sh logs",
    "docker:migrate": "bash docker-scripts.sh migrate",
    "docker:seed": "bash docker-scripts.sh seed"
  },
  "devDependencies": {
    "prisma": "6.17.1",
    "turbo": "^2.1.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "6.17.1"
  }
}
