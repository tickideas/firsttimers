{
  "name": "@firsttimers/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts | bunx pino-pretty",
    "build": "bun build src/index.ts --target bun --outdir dist",
    "start": "bun run dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@opentelemetry/api": "^1.9.0",
    "@sentry/bun": "^8.52.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.67.2",
    "hono": "^4.7.4",
    "jose": "^6.0.8",
    "pino": "^9.6.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@firsttimers/config": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.13.4",
    "bun-types": "^1.2.4",
    "eslint": "^9.19.0",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.7.3"
  }
}
