{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["bun.lockb", ".env"],
  "globalEnv": ["NODE_ENV", "DATABASE_URL", "REDIS_URL"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "inputs": [
        "src/**",
        "app/**",
        "package.json",
        "tsconfig.json",
        "!**/*.test.ts",
        "!**/*.spec.ts",
        "!**/__tests__/**"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**", "app/**", "*.ts", "*.tsx", "*.mjs"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**", "app/**", "tsconfig.json", "package.json"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.test.ts", "**/*.spec.ts", "__tests__/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
