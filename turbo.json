{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["bun.lockb"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "inputs": ["src/**", "app/**", "package.json", "tsconfig.json"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
